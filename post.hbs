{{!< default}} 
{{! The comment above "< default" means - insert everything in this file into the {body} of the default.hbs template, which contains our header/footer. }} 
<main class="content" role="main">
    <article class="row">
        <div class="row {{post_class}}">
            <div class="small-12 medium-9 cell">
                {{! Everything inside the #post tags pulls data from the post }} 
                {{#post}} 
                {{! Everything below outputs content of the the post which has been published }}
                <h1>{{{title}}}</h1>
                <div class="row">
                    <span class="post-meta small-12 medium-5 large-4 cell">
                        <time datetime="{{date format=" YYYY-MM-DD "}}">{{date format='DD MMM YYYY'}}</time>{{#if tags}}on {{tags separator=" | "}}{{/if}}
                    </span>
                    <section class="share-container small-12 medium-5 large-6 cell end">
                        <ul class="btn-share clearfix small-centered">

                            <li><a href="#" class="button share entypo-share"></a></li>
                            <li><a href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;" class="button twitter entypo-twitter" target="_blank"></a></li>           
                      <li><a href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;" class="button gplus entypo-gplus" target="_blank"></a></li>
                            <li><a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;" class="button facebook entypo-facebook" target="_blank"></a></li>
                        </ul>
                    </section>
                </div>
                <section class="post-content">
                    {{content}}
                </section>
                    <section class="comment small-10 cell small-centered">
                        <div class="g-comments" data-href="{{@blog.url}}{{url}}" data-first_party_property="BLOGGER" data-view_type="FILTERED_POSTMOD">Loading Google+ Comments ...</div>
                        <script async type="text/javascript" src="//apis.google.com/js/plusone.js?callback=gpcb"></script>
                        <noscript>Please enable JavaScript to view the <a href="https://plus.google.com/">comments powered by Google+.</a></noscript>
                    </section>
            </div>
            {{#if author}}
                <div class="userdetails small-12 medium-3 cell">
                    {{#if author.image}}
                    <div class="image" style="background-image: url({{author.image}})"></div>
                    {{/if}}
                    <div class="info">
                        <h4 class="name">{{author.name}}</h4>
                        {{#if author.website}}
                        <h3 class="position"><a href="{{author.website}}">{{author.website}}</a>
                        </h3>
                        {{/if}} {{#if author.location}}
                        <h3 class="position"><a href="https://www.google.com/maps/preview#!q={{author.location}}">{{author.location}}</a>
                        </h3>
                        {{/if}} {{#if author.bio}}
                        <p>{{author.bio}}</p>
                        {{/if}}
                    </div>
                </div>
            {{/if}}
        </div>
        {{/post}}
    </article>
</main>
